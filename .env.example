# Database Configuration
# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=
# Your Supabase anonymous key (public)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
# Your Supabase service role key (private)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# AI Services
# Your OpenAI API key
OPENAI_API_KEY=your-openai-api-key
# OpenAI model to use for question generation (default: gpt-4)
OPENAI_MODEL=gpt-4
# OpenAI model to use for embeddings (default: text-embedding-ada-002)
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
# Your LlamaParse API key for document processing
LLAMAPARSE_API_KEY=your-llamaparse-api-key

# Application Settings
# Development, production, or test
NODE_ENV=development
# Your application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Admin user email
ADMIN_EMAIL=admin@example.com
# Maximum upload size in bytes (default: 10MB)
MAX_UPLOAD_SIZE=10485760

# Authentication
# Your application URL for authentication
NEXTAUTH_URL=http://localhost:3000
# Random string for session encryption
NEXTAUTH_SECRET=your-random-string-at-least-32-chars
# Google OAuth credentials
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
NEXT_PUBLIC_GOOGLE_CLIENT_SECRET=your-google-client-secret

# Document Processing Settings
# Size of text chunks for processing (default: 1000)
CHUNK_SIZE=1000
# Overlap between chunks (default: 200)
CHUNK_OVERLAP=200
# Threshold for vector similarity search (default: 0.7)
VECTOR_SIMILARITY_THRESHOLD=0.7
# Maximum number of search results (default: 5)
MAX_SEARCH_RESULTS=5
